<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Common Styles -->
    <style name="GEN_WrapCont_CentreH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GEN_MatchCont_CentreH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
    </style>

    <style name="GEN_MatchWidth_WrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GEN_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_1dp</item>
    </style>

    <style name="GEN_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingLeft">@dimen/dimen_20dp</item>
        <item name="android:paddingRight">@dimen/dimen_20dp</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!-- -->
    <!-- Specific element Styles -->
    <!-- -->

    <!-- Logo -->
    <style name="logo">
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:src">@drawable/quiz</item>
        <item name="android:layout_marginBottom">@dimen/dimen_30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="viewEditText">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:maxWidth">@dimen/dimen_320dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/dimen_140dp</item>
    </style>

    <style name="viewSpinner" parent="GEN_WrapCont_CentreH">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="btnGreen" parent="GEN_Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
    </style>

    <style name="btnDarkGrey" parent="GEN_Button">
        <item name="android:background">@color/colorGreyDark</item>
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
    </style>

    <style name="btnProcess" parent="GEN_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="btnEmailScores" parent="btnProcess">
        <item name="android:background">@color/colorGreyDark</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="textViewHello" parent="GEN_TextView">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="textViewQNum" parent="GEN_TextView">
        <item name="android:textSize">@dimen/font_xlarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:background">@color/colorGreyDark</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radioButton" parent="GEN_TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="radioGroup" parent="GEN_MatchWidth_WrapHeight">
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="checkBox" parent="GEN_TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="checkBoxHolder" parent="GEN_MatchWidth_WrapHeight">
        <item name="android:paddingLeft">@dimen/dimen_64dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Style for Results -->

    <style name="textQuestion" parent="GEN_TextView">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="textAnswer" parent="GEN_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/dimen_0dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_1dp</item>
    </style>

    <style name="textSpacer" parent="GEN_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
        <item name="android:padding">@dimen/dimen_0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_20dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_20dp</item>
    </style>

</resources>
